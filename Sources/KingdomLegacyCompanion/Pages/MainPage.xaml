<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingdomLegacyCompanion.Pages.MainPage"
             BackgroundColor="{StaticResource Primary}"
             Shell.NavBarIsVisible="False">

    <Grid>
        <VerticalStackLayout Spacing="25" Padding="30">
            <BoxView Color="Transparent"
                     HeightRequest="10" />
            <Label Text="Kingdom Legacy Companion" 
                   FontSize="32"
                   FontFamily="LibreBaskervilleRegular"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Start" />
            <BoxView Color="Transparent"
                     HeightRequest="20" />
            <Grid HorizontalOptions="Center">
                <Image Source="button.jpg" 
                       Aspect="Center"
                       />
                <Button Text="New Kingdom"
                        Clicked="NewGameClicked"
                        FontSize="20"
                        FontFamily="LibreBaskervilleRegular"
                        TextColor="White"
                        BackgroundColor="Transparent"/>
            </Grid>

            <Grid HorizontalOptions="Center">
                <Image Source="button.jpg" 
                       Aspect="Center"/>
                <Button Text="Resume a game"
                        Clicked="LoadGameClicked"
                        FontSize="20"
                        FontFamily="LibreBaskervilleRegular"
                        TextColor="White"
                        BackgroundColor="Transparent"/>
            </Grid>

            <Grid HorizontalOptions="Center">
                <Image Source="button.jpg" 
                       Aspect="Center"/>
                <Button 
                        Text="High Score"
                        Clicked="CheckHistoryClicked"
                        FontSize="20"
                        FontFamily="LibreBaskervilleRegular"
                        TextColor="White"
                        BackgroundColor="Transparent"/>
            </Grid>
        </VerticalStackLayout>
        <Button
            Clicked="GoToSettingsPage"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="Transparent"
            FontAttributes="Bold"
            BorderColor="White"
            BorderWidth="2"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="10">
            <Button.ImageSource>
                <FontImageSource Size="20"  FontFamily="FluentIcons" Glyph="&#xe713;" Color="White"/>
            </Button.ImageSource>
        </Button>
    </Grid>
</ContentPage>
