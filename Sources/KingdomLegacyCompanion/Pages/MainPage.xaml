<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingdomLegacyCompanion.Pages.MainPage"
             BackgroundColor="{StaticResource Primary}"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Spacing="25" Padding="30">
        <BoxView Color="Transparent"
                 HeightRequest="10" />
        <Label Text="Kingdom Legacy Companion" 
               FontSize="32"
               FontFamily="LibreBaskervilleRegular"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Start" />
        <BoxView Color="Transparent"
                 HeightRequest="20" />
        <Grid HorizontalOptions="Center">
            <Image Source="button.jpg" 
                   Aspect="Center"
                   />
            <Button Text="New Kingdom"
                    Clicked="NewGameClicked"
                    FontSize="20"
                    FontFamily="LibreBaskervilleRegular"
                    TextColor="White"
                    BackgroundColor="Transparent"/>
        </Grid>

        <Grid HorizontalOptions="Center">
            <Image Source="button.jpg" 
                   Aspect="Center"/>
            <Button Text="Resume a game"
                    FontSize="20"
                    FontFamily="LibreBaskervilleRegular"
                    TextColor="White"
                    BackgroundColor="Transparent"/>
        </Grid>

        <Grid HorizontalOptions="Center">
            <Image Source="button.jpg" 
                   Aspect="Center"/>
            <Button 
                    Text="High Score"
                    FontSize="20"
                    FontFamily="LibreBaskervilleRegular"
                    TextColor="White"
                    BackgroundColor="Transparent"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
