<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingdomLegacyCompanion.Pages.CardsPage"
             Title="CardsPage"
             BackgroundColor="{StaticResource Primary}"
             Shell.NavBarIsVisible="False">
    <Grid>
        <WebView Source="https://www.kingdomlegacygame.com/cards/FeudalKingdom/0"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand"/>
        <Button 
            Clicked="GoBackMainPage"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="{StaticResource Primary}"
            FontSize="25"
            FontAttributes="Bold"
            BorderColor="White"
            BorderWidth="2"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            Margin="10">
            <Button.ImageSource>
                <FontImageSource FontFamily="FluentIcons" Glyph="&#xe830;" Color="White"/>
            </Button.ImageSource>
        </Button>
    </Grid>
</ContentPage>