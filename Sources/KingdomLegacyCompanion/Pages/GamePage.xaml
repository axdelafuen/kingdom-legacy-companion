                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <BoxView Color="Transparent" HeightRequest="30" />
            <Grid HorizontalOptions="Center">
                <Image Source="button.jpg" 
                   Aspect="Center"
                   />
                <Button Text="Seal the Legacy"
                    Clicked="EndGameClicked"
                    FontSize="20"
                    FontFamily="LibreBaskervilleRegular"
                    TextColor="White"
                    BackgroundColor="Transparent"/>
            </Grid>
        </VerticalStackLayout>
        <Button 
            Clicked="GoBackMainPage"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="Transparent"
            FontSize="25"
            FontAttributes="Bold"
            BorderColor="White"
            BorderWidth="2"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            Margin="10"
        >
            <Button.ImageSource>
                <FontImageSource FontFamily="FluentIcons"
                         Glyph="&#xe830;"
                         Color="White"
                         />
            </Button.ImageSource>
        </Button>

        <Button 
            Clicked="DeleteThisGame"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="Transparent"
            FontSize="25"
            FontAttributes="Bold"
            BorderColor="White"
            BorderWidth="2"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="10"
        >
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FluentIcons"
                         Glyph="&#xe74d;"
                         Color="White"
                         />
                    </Button.ImageSource>
                </Button>
    </Grid>
</ContentPage>