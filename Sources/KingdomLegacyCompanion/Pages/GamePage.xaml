                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Label  Text="{Binding Stone}" FontSize="30" VerticalOptions="Center" FontFamily="LibreBaskervilleRegular" TextColor="White"/>
                <Image Source="stone.png" WidthRequest="45" HeightRequest="45"/>
                <Button 
                    AutomationId="stone"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
