                <Image Source="tradegoods.png" WidthRequest="45" HeightRequest="45"/>
                <Button 
                    AutomationId="tradegoods"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
