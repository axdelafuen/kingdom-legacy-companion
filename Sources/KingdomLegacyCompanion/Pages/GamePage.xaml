                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>
            <!--TRADEGOODS-->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button 
                    AutomationId="tradegoods"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
