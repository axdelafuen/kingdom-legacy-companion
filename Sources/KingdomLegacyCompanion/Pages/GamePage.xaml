<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingdomLegacyCompanion.Pages.GamePage"
             Title="GamePage"
             BackgroundColor="{StaticResource Primary}"
             Shell.NavBarIsVisible="False"
             >
    <Grid>
        <VerticalStackLayout Spacing="15" Padding="30">
            <BoxView Color="Transparent"
                HeightRequest="40" />
            <Label 
                Text="{Binding Name}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                FontSize="32"
                FontFamily="LibreBaskervilleRegular"
                TextColor="White"/>
            <BoxView Color="Transparent" HeightRequest="10" />
            <!--GOLD-->
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button 
                    Grid.Row="0"
                    Grid.Column="0"
                    AutomationId="gold"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    VerticalOptions="Center"
                    HorizontalOptions="End"/>
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="{Binding Gold}" 
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontFamily="LibreBaskervilleRegular" 
                    TextColor="White"/>
                <Image
                    Grid.Row="0"
                    Grid.Column="2"
                    Source="money.png" 
                    WidthRequest="45" 
                    HeightRequest="45"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
                <Button 
                    Grid.Row="0"
                    Grid.Column="3"
                    AutomationId="gold"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
                <!--WOOD-->
                <Button 
                    Grid.Row="1"
                    Grid.Column="0"
                    AutomationId="wood"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="1" 
                    Text="{Binding Wood}" 
                    FontSize="30" 
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    FontFamily="LibreBaskervilleRegular" 
                    TextColor="White"/>
                <Image 
                    Grid.Row="1"
                    Grid.Column="2" 
                    Source="wood.png" 
                    WidthRequest="45" 
                    HeightRequest="45"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"/>
                <Button 
                    Grid.Row="1"
                    Grid.Column="3" 
                    AutomationId="wood"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
                <!--STONE-->
                <Button 
                    Grid.Row="2"
                    Grid.Column="0" 
                    AutomationId="stone"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
                <Label 
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="{Binding Stone}" 
                    FontSize="30" 
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    FontFamily="LibreBaskervilleRegular" 
                    TextColor="White"/>
                <Image 
                    Grid.Row="2"
                    Grid.Column="2"
                    Source="stone.png" 
                    WidthRequest="45" 
                    HeightRequest="45"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"/>
                <Button 
                    Grid.Row="2"
                    Grid.Column="3"
                    AutomationId="stone"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
                <!--STEEL-->
                <Button 
                    Grid.Row="3"
                    Grid.Column="0"
                    AutomationId="steel"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
                <Label 
                    Grid.Row="3"
                    Grid.Column="1"
                    Text="{Binding Steel}" 
                    FontSize="30" 
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    FontFamily="LibreBaskervilleRegular" 
                    TextColor="White"/>
                <Image 
                    Grid.Row="3"
                    Grid.Column="2"
                    Source="steel.png" 
                    WidthRequest="45" 
                    HeightRequest="45"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"/>
                <Button 
                    Grid.Row="3"
                    Grid.Column="3"
                    AutomationId="steel"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
                <!--SWORD-->
                <Button 
                    Grid.Row="4"
                    Grid.Column="0"
                    AutomationId="sword"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    Text="{Binding Sword}" 
                    FontSize="30" 
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    FontFamily="LibreBaskervilleRegular" 
                    TextColor="White"/>
                <Image 
                    Grid.Row="4"
                    Grid.Column="2"
                    Source="sword.png" 
                    WidthRequest="45" 
                    HeightRequest="45"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"/>
                <Button 
                    Grid.Row="4"
                    Grid.Column="3"
                    AutomationId="sword"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
                <!--TRADEGOODS-->
                <Button 
                    Grid.Row="5"
                    Grid.Column="0"
                    AutomationId="tradegoods"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
                <Label 
                    Grid.Row="5"
                    Grid.Column="1"
                    Text="{Binding TradeGoods}" 
                    FontSize="30" 
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    FontFamily="LibreBaskervilleRegular" 
                    TextColor="White"/>
                <Image 
                    Grid.Row="5"
                    Grid.Column="2"
                    Source="tradegoods.png" 
                    WidthRequest="45" 
                    HeightRequest="45"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"/>
                <Button 
                    Grid.Row="5"
                    Grid.Column="3"
                    AutomationId="tradegoods"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
            </Grid>
            <!--END GAME BUTTON-->
            <BoxView Color="Transparent" HeightRequest="30" />
            <Grid HorizontalOptions="Center">
                <Image Source="button.jpg" 
                   Aspect="Center"
                   />
                <Button Text="Seal the Legacy"
                    Clicked="EndGameClicked"
                    FontSize="20"
                    FontFamily="LibreBaskervilleRegular"
                    TextColor="White"
                    BackgroundColor="Transparent"/>
            </Grid>
        </VerticalStackLayout>
        <Button 
            Clicked="GoBackMainPage"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="Transparent"
            FontSize="25"
            FontAttributes="Bold"
            BorderColor="White"
            BorderWidth="2"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            Margin="10"
        >
            <Button.ImageSource>
                <FontImageSource FontFamily="FluentIcons"
                         Glyph="&#xe830;"
                         Color="White"
                         />
            </Button.ImageSource>
        </Button>
        <Button 
            Clicked="DeleteThisGame"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="Transparent"
            FontSize="25"
            FontAttributes="Bold"
            BorderColor="White"
            BorderWidth="2"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="10"
        >
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FluentIcons"
                         Glyph="&#xe74d;"
                         Color="White"
                         />
                    </Button.ImageSource>
                </Button>
    </Grid>
</ContentPage>