<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingdomLegacyCompanion.Pages.GamePage"
             Title="GamePage"
             BackgroundColor="{StaticResource Primary}"
             Shell.NavBarIsVisible="False"
             >
    <Grid>
        <VerticalStackLayout Spacing="15" Padding="30">
            <BoxView Color="Transparent"
                HeightRequest="40" />
            <Label 
                Text="{Binding Name}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                FontSize="32"
                FontFamily="LibreBaskervilleRegular"
                TextColor="White"/>
            <BoxView Color="Transparent" HeightRequest="10" />
            <!--GOLD-->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button 
                    AutomationId="gold"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Label  Text="{Binding Gold}" FontSize="30" VerticalOptions="Center" FontFamily="LibreBaskervilleRegular" TextColor="White"/>
                <Image Source="money.png" WidthRequest="45" HeightRequest="45"/>
                <Button 
                    AutomationId="gold"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>
            <!--WOOD-->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button 
                    AutomationId="wood"
                    Text="—"
                    Clicked="SubValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>  
                <Label  Text="{Binding Wood}" FontSize="30" VerticalOptions="Center" FontFamily="LibreBaskervilleRegular" TextColor="White"/>
                <Image Source="wood.png" WidthRequest="45" HeightRequest="45"/>
                <Button 
                    AutomationId="wood"
                    Text="+"
                    Clicked="AddValueToResource"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
                    BorderColor="Black"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>
