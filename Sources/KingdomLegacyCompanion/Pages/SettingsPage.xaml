<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingdomLegacyCompanion.Pages.SettingsPage"
             Title="SettingsPage"
             BackgroundColor="{StaticResource Primary}"
             Shell.NavBarIsVisible="False">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="30">
                <Label 
                Text="Settings"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                FontSize="32"
                FontFamily="LibreBaskervilleRegular"
                TextColor="White"/>

                <BoxView Color="Transparent"
             HeightRequest="20" />

                <Grid HorizontalOptions="Center">
                    <Image Source="button_pressed.jpg" 
                        Aspect="Center"/>
                    <Button Text="Clear app data"
                        Clicked="ClearAppData"
                        FontSize="20"
                        FontFamily="LibreBaskervilleRegular"
                        TextColor="White"
                        BackgroundColor="Transparent"/>
                </Grid>
                <Grid HorizontalOptions="Center">
                    <Image Source="button_pressed.jpg" 
                        Aspect="Center"/>
                    <Button Text="Check cards"
                        Clicked="CardsPageClicked"
                        FontSize="20"
                        FontFamily="LibreBaskervilleRegular"
                        TextColor="White"
                        BackgroundColor="Transparent"/>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
        <Button 
            Clicked="GoBackMainPage"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="Transparent"
            FontSize="25"
            FontAttributes="Bold"
            BorderColor="White"
            BorderWidth="2"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            Margin="10">
            <Button.ImageSource>
                <FontImageSource FontFamily="FluentIcons"
                     Glyph="&#xe830;"
                     Color="White"
                     />
            </Button.ImageSource>
        </Button>
    </Grid>
</ContentPage>